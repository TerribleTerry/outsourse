<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aleskovacic.pact.activities.MessageChatActivity">

    <TextView
        android:id="@+id/message_text"
        style="@style/textBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/message_time"
            style="@style/textNormal"
            android:layout_width="3dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:gravity="left"


            />

        <TextView
            android:id="@+id/user_lastname"
            style="@style/textNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/info_window_padding"
            android:ellipsize="end"
            android:gravity="right"

            android:paddingLeft="@dimen/card_padding_small"
            android:paddingStart="@dimen/card_padding_small"
            android:layout_weight="1.06" />

    </LinearLayout>
</LinearLayout>