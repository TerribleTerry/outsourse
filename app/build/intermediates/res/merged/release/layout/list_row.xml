<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_list_corner_radius"
    tools:context="com.aleskovacic.eventslocator4.activities.ListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cover_photo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cover_photo"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            style="@style/textH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/text_spacing"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:paddingTop="@dimen/card_padding_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding">

            <TextView
                android:id="@+id/start_time"
                style="@style/textH4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_access_time_black_18dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:drawableStart="@drawable/ic_access_time_black_18dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/place"
                style="@style/textH4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place_black_18dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:drawableStart="@drawable/ic_place_black_18dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/card_padding_small"
                android:paddingStart="@dimen/card_padding_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            style="@style/textH4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/card_padding_big"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:paddingTop="@dimen/text_spacing" />

    </LinearLayout>

</android.support.v7.widget.CardView>